<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rescue_pets" >
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rescue_Pets"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".splash_activity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- SplashActivity as Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Role Selection Screen -->
        <activity
            android:name=".ChooseActivity"
            android:exported="false" /> <!-- Volunteer -->
        <activity
            android:name=".Volunteer.Rescue_Field_Activity"
            android:exported="false" />
        <activity
            android:name=".Volunteer.Forgot_Password_Volunteer"
            android:exported="false" />
        <activity
            android:name=".Volunteer.Login_Volunteer"
            android:exported="false" />
        <activity
            android:name=".Volunteer.Volunteer_Dashboard"
            android:exported="false" />
        <activity
            android:name=".Volunteer.Volunteer_Registration"
            android:exported="false" /> <!-- Admin -->
        <activity
            android:name=".Admin.Forgot_Password_Admin"
            android:exported="false" />
        <activity
            android:name=".Admin.Admin_Login"
            android:exported="false" />
        <activity
            android:name=".Admin.DashBoard_Admin"
            android:exported="false" /> <!-- User -->
        <activity
            android:name=".User.Forgot_Password_User"
            android:exported="false" />
        <activity
            android:name=".User.User_Login_Activity"
            android:exported="false" />
        <activity
            android:name=".User.User_Registration_Activity"
            android:exported="false" />
        <activity
            android:name=".User.Dash_Board_User"
            android:exported="false" /> <!-- MainActivity (if still used internally) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>